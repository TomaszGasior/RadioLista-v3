{% block form_row %}
    <dt>
        {{ form_label(form) }}
    </dt>
    <dd>
        {{ form_widget(form) }}
    </dd>
{% endblock form_row %}

{% block checkbox_row %}
    <dt class="checkboxes">
        {{ form_label(form) }}
    </dt>
    <dd>
        {{ form_widget(form) }}
    </dd>
{% endblock checkbox_row %}

{% block radio_row %}
    {{ block('checkbox_row') }}
{% endblock radio_row %}

{% block choice_row %}
    {% if expanded %}
        {# Do not render additional block for label when "expanded". #}
        {% for child in form %}
            {# Use proper markup for nested radio fields when "expanded". #}
            {{ form_row(child) }}
        {% endfor %}
    {% else %}
        {{ form_row(form) }}
    {% endif %}
{% endblock choice_row %}
