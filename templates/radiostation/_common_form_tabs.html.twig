<div class="tabbed-ui">
    <div>
        <h3>Główne</h3>

        {{ form_row(form.frequency, {'unit_label': radiostation.radioTable.useKhz ? 'kHz' : 'MHz'}) }}
        {{ form_row(form.name) }}
        {{ form_row(form.radioGroup) }}
        {{ form_row(form.country) }}
        {{ form_row(form.quality) }}
    </div>
    <div>
        <h3>Nadawanie i audycje</h3>

        {{ form_row(form.location) }}
        {{ form_row(form.power) }}
        {{ form_row(form.polarization) }}
        {{ form_row(form.type) }}
        {{ form_row(form.localityType, {'attr': {'class': 'locality-type-input'}}) }}
        <div class="locality-city-wrapper">
            {{ form_row(form.localityCity) }}
        </div>

        <script>
        (function(){
            const LOCALITY_COUNTRY = '{{ constant('App\\Entity\\RadioStation::LOCALITY_COUNTRY') }}';
            var localityTypeInput = document.querySelector('.locality-type-input');
            var localityCityWrapper = document.querySelector('.locality-city-wrapper');

            var updateFieldVisibility = function()
            {
                localityCityWrapper.hidden = (localityTypeInput.value == LOCALITY_COUNTRY);
            };
            updateFieldVisibility();
            localityTypeInput.addEventListener('change', updateFieldVisibility);
            localityTypeInput.addEventListener('blur', updateFieldVisibility);
        })();
        </script>
    </div>
    <div>
        <h3>Osobiste</h3>

        {{ form_row(form.privateNumber) }}
        {{ form_row(form.marker) }}
        {{ form_row(form.comment) }}
    </div>
    <div>
        <h3>RDS</h3>

        <p class="information">
            Poszczególne klatki PS oraz części RT rodziel znakiem pionowej kreski.
        </p>
        <noscript>
            <p class="information">
                Aby zobaczyć wyskakujące okno z&nbsp;informacjami o&nbsp;RDS, włącz JavaScript w&nbsp;przeglądarce.
            </p>
        </noscript>

        <div class="radiostation-rds">
            {{ form_row(form.rdsPs) }}
            {{ form_row(form.rdsRt) }}
            {{ form_row(form.rdsPty) }}
        </div>
    </div>
</div>
