{% use '@FOSCKEditor/Form/ckeditor_widget.html.twig' %}

{% block ckeditor_widget %}
    {% set attr = attr|merge({ class: 'with-ckeditor' }) %}
    {{ parent() }}

    <script>
        {# Remove "HTML" word from wordcount plugin UI message. #}
        CKEDITOR.instances.{{ id }}.on('langLoaded', function(event) {
            let lang = CKEDITOR.lang[event.editor.config.language];
            lang.wordcount.CharCountWithHTML = lang.wordcount.CharCount;
        });

        {# Remove URL protocols other than "http://" and "https://". #}
        CKEDITOR.on('dialogDefinition', function(event) {
            if (event.data.name == 'link') {
                event.data.definition.getContents('info').get('protocol')['items'].splice(2, 3);
            }
        });
    </script>
{% endblock %}
