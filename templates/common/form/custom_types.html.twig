{% block integer_unit_widget %}
    {{ block('integer_widget') }}
    {{ unit_label }}
{% endblock integer_unit_widget %}

{% block decimal_unit_widget %}
    {% set attr = attr|merge({'class': 'decimal', 'step': step, 'min': step}) %}
    {{ block('integer_unit_widget') }}

    <script>
        {# Enforce leading zeros in typed values ("87.6" -> "87.60"). #}
        {# Do not use "input" event â€” it looks better but makes manual typing hard. #}
        {# Works only in Webkit/Blink. Additional "if" needed for MSEdge/IE. #}
        {# See: https://developer.microsoft.com/en-us/microsoft-edge/platform/issues/6367416/ #}
        document.getElementById('{{ id }}').addEventListener('change', function(){
            if (this.valueAsNumber) {
                this.value = this.valueAsNumber.toFixed(2);
            }
        });
    </script>
{% endblock decimal_unit_widget %}

{% block radio_table_columns_row %}
    {# Do not render label for radiotable columns widget. #}
    {{ block('form_rows') }}
{% endblock radio_table_columns_row %}

{% block text_hints_widget %}
    {% set hints_list_id = id ~ '_hints' %}
    <datalist id="{{ hints_list_id }}">
        {% for hint in hints %}
            <option>{{ hint }}</option>
        {% endfor %}
    </datalist>

    {% set attr = attr|merge({'list': hints_list_id}) %}
    {{ block('form_widget') }}
{% endblock text_hints_widget %}
