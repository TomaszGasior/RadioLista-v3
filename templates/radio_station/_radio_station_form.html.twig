{% form_theme form 'radio_station/_radio_station_form_theme.html.twig' %}

<div class="ui-block">
    <div class="ui-block-heading">
        <h2>{{ 'radio_station.edit.heading.general'|trans }}</h2>
    </div>

    <div class="ui-block-content">
        <div class="form-columns form-columns-with-number-first">
            {{ form_row(form.frequency, {
                attr: { 'class': 'frequency-input' },
                'unit_label': get_frequency_label(radio_station.radioTable.frequencyUnit),
            }) }}
            {{ form_row(form.name) }}
        </div>

        <div class="form-columns">
            {{ form_row(form.country) }}
            {{ form_row(form.region) }}
        </div>

        <div class="form-columns">
            {{ form_row(form.type) }}
            {{ form_row(form.radioGroup) }}
        </div>
    </div>
</div>

<div class="ui-block">
    <div class="ui-block-heading">
        <h2>{{ 'radio_station.edit.heading.broadcast'|trans }}</h2>
    </div>

    <div class="ui-block-content">
        <div class="form-columns form-columns-with-number-first">
            {{ form_row(form.power, {'unit_label': 'kW'}) }}
            {{ form_row(form.location) }}
        </div>

        <div class="form-columns">
            {{ form_row(form.polarization) }}
            {{ form_row(form.multiplex) }}
            {{ form_row(form.dabChannel, {attr: { 'class': 'dab-channel-input' }}) }}
        </div>
    </div>
</div>

<div class="ui-block">
    <div class="ui-block-heading">
        <h2>{{ 'radio_station.edit.heading.reception'|trans }}</h2>
    </div>

    <div class="ui-block-content">
        <div class="form-columns">
            {{ form_row(form.distance, {'unit_label': 'km'}) }}
            {{ form_row(form.maxSignalLevel, {'unit_label': get_max_signal_level_label(radio_station.radioTable.maxSignalLevelUnit)}) }}
            {{ form_row(form.quality) }}
        </div>

        <div class="form-columns">
            {{ form_row(form.firstLogDate) }}
            {{ form_row(form.reception) }}
        </div>
    </div>
</div>

<div class="ui-block">
    <div class="ui-block-heading">
        <h2>{{ 'radio_station.edit.heading.personal'|trans }}</h2>
    </div>

    <div class="ui-block-content">
        <div class="form-columns form-columns-with-number-first">
            {{ form_row(form.privateNumber) }}
            {{ form_row(form.externalAnchor) }}
        </div>

        {{ form_row(form.comment) }}
    </div>
</div>

<div class="ui-block">
    <div class="ui-block-heading">
        <h2>{{ 'radio_station.edit.heading.rds'|trans }}</h2>
    </div>

    <div class="ui-block-content">
        <noscript>
            <p class="information">
                {{ 'radio_station.edit.information.rds_popup'|trans }}
            </p>
        </noscript>

        <div class="radio-station-rds">
            <div class="form-columns">
                {{ form_row(form.rdsPi) }}
                {{ form_row(form.rdsPty) }}
            </div>

            {{ form_row(form.rdsPs, {attr: {wrap: 'off'}}) }}
            {{ form_row(form.rdsRt, {attr: {wrap: 'off'}}) }}
        </div>
    </div>
</div>

<div class="ui-block">
    <div class="ui-block-heading">
        <h2>{{ 'radio_station.edit.heading.appearance'|trans }}</h2>
    </div>

    <div class="ui-block-content">
        {{ form_row(form.appearanceBackground) }}

        <div class="form-columns">
            {{ form_row(form.appearanceBold) }}
            {{ form_row(form.appearanceItalic) }}
            {{ form_row(form.appearanceStrikethrough) }}
        </div>
    </div>
</div>
