{% extends 'layout.html.twig' %}

{% block page_title %}{{ 'radio_station.add.title'|trans }}{% endblock %}

{% block head_closing %}
    <link rel="stylesheet" href="{{ asset('css/radio-station/edit-add.css') }}">
    <script type="module" src="{{ asset('js/radio-station/edit-add.js') }}"></script>
{% endblock %}

{% block context_menu %}
    <li>
        <a href="{{ path('radio_table.show', {id: radio_table.id}) }}">
            {{ 'radio_table.show.title'|trans }}
        </a>
    </li>
    <li>
        <a href="{{ path('radio_table.settings', {id: radio_table.id}) }}">
            {{ 'radio_table.settings.title'|trans }}
        </a>
    </li>
{% endblock %}

{% block page_content %}
    <header>
        <h1 class="separated-title">
            <span>{{ 'radio_station.add.title_long'|trans }}</span>
            <span class="additional">
                <span class="sr-only"> {{ 'common.text.in_radio_table_a11y_subheading_prefix'|trans }} </span>
                {{ radio_table.name }}
            </span>
        </h1>
    </header>

    {{ form_start(form) }}

    {% include 'radio_station/_radio_station_form.html.twig' %}

    <div class="form-action-button">
        <button>{{ 'radio_station.add.title'|trans }}</button>
    </div>

    {{ form_end(form) }}
{% endblock %}
