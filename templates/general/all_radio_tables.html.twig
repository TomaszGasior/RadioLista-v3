{% extends 'layout.html.twig' %}

{% block head_closing %}
    <link rel="stylesheet" href="{{ asset('css/general/all-radio-tables.css') }}">
{% endblock %}

{% block page_title %}{{ 'general.all_radio_tables.title'|trans }}{% endblock %}

{% block page_content %}
    <header>
        <h1>{{ 'general.all_radio_tables.title_long'|trans }}</h1>

        <ul class="all-radio-tables-navigation">
            {% for sorting in all_sortings %}
                <li>
                    <a {{ current_sorting == sorting ? 'class="selected"' : '' }}
                        href="{{ path('all_radio_tables', {'sorting': sorting.value}) }}">
                        {{ ('general.all_radio_tables.sorting.' ~ sorting.value)|trans }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    </header>

    {% set show_owner = true %}
    {% include 'common/radio_tables_list.html.twig' %}
{% endblock %}
