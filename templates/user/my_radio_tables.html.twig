{% extends 'layout.html.twig' %}

{% block page_title %}Moje wykazy{% endblock %}

{% block context_menu %}
    <ul>
        <li><a href="{{ path('radio_table.create') }}">Utwórz wykaz</a></li>
    </ul>
{% endblock %}

{% block page_content %}
    <header>
        <h1>Moje wykazy</h1>
    </header>

    {% if radio_tables %}
        {% set show_visibility = true %}
        {% include 'common/radio_tables_list.html.twig' %}
    {% else %}
        <p class="information">
            Nie posiadasz jeszcze żadnego wykazu.
            <a href="{{ path('radio_table.create') }}">To najlepszy moment, żeby to zmienić!</a>
        </p>
    {% endif %}
{% endblock %}

