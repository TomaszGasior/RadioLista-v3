{% extends 'layout.html.twig' %}

{% block page_title %}{{ user.name }}{% endblock %}

{% block head_closing %}
    {# User name is case insensitive. #}
    <link rel="canonical" href="{{ path('user.public_profile', {name: user.name}) }}">
{% endblock %}

{% block page_content %}
    <header>
        <h2><strong>{{ user.name }}</strong> — profil użytkownika</h2>
    </header>

    {% if user.aboutMe is not empty %}
        <section class="user-profile-page user-profile-description">
            <h3>Informacje o użytkowniku</h3>

            {{ user.aboutMe|raw }}
            <dl class="user-profile-details">
                <div>
                    <dt>Data ostatniej aktywności</dt>
                    <dd>{{ user.lastActivityDate|date_format }}</dd>
                </div>
                <div>
                    <dt>Data założenia konta</dt>
                    <dd>{{ user.registerDate|date_format }}</dd>
                </div>
            </dl>
        </section>
    {% endif %}

    <section class="user-profile-page">
        <h3>Wykazy tego użytkownika</h3>

        {% if radiotables %}
            {% include 'common/radiotables_list.html.twig' %}
        {% else %}
            <p class="information">Ten użytkownik nie utworzył jeszcze żadnego wykazu.</a></p>
        {% endif %}
    </section>
{% endblock %}
