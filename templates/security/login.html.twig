{% extends 'layout.html.twig' %}

{% block page_title %}Logowanie{% endblock %}

{% block page_content %}
    <header class="sr-only">
        <h2>Konto użytkownika — logowanie i rejestracja</h2>
    </header>

    {{ form_start(form) }}

    <div class="tabbed-ui userLoginScreen">
        <div>
            <h3>Zaloguj się</h3>

            {{ form_row(form.username, {'attr': {'autofocus': ''}}) }}
            {{ form_row(form.password) }}
            {{ form_row(form.rememberMe) }}

            <button>Zaloguj się</button>
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}
