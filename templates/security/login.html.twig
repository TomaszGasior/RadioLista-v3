{% extends 'layout.html.twig' %}

{% block head_closing %}
    {{ encore_entry_link_tags('user-login-register') }}
{% endblock %}

{% block page_title %}{{ 'session.login.title'|trans }}{% endblock %}

{% block page_content %}
    {{ form_start(form) }}

    <div class="user-login-screen">
        <h1 class="h2">{{ 'session.login.title'|trans }}</h1>

        {{ form_row(form.username, {'attr': {'autofocus': ''}}) }}
        {{ form_row(form.password) }}
        {{ form_row(form.rememberMe) }}

        <button>{{ 'session.login.title'|trans }}</button>
    </div>

    {{ form_end(form) }}
{% endblock %}
