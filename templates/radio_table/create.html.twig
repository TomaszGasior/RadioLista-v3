{% extends 'layout.html.twig' %}

{% block page_title %}{{ 'radio_table.create.title'|trans }}{% endblock %}

{% block head_closing %}
    <link rel="stylesheet" href="{{ asset('css/radio-table/create.css') }}">
{% endblock %}

{% block page_content %}
    <header>
        <h1>{{ 'radio_table.create.title_long'|trans }}</h1>
    </header>

    {{ form_start(form) }}

    <div class="ui-block">
        <div class="ui-block-content">
            {{ form_row(form.name) }}
            {{ form_row(form.status) }}
        </div>
    </div>

    <div class="form-action-button">
        <button>{{ 'radio_table.create.title'|trans }}</button>
    </div>

    {{ form_end(form) }}
{% endblock %}
